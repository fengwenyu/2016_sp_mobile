<?xml version="1.0" encoding="UTF-8"?>
<redis>
	<application>
		<id>api</id>
		<cluster>
			<clusterid>default</clusterid>
			<configuration>
				<!-- 最大的活动连接 -->
				<maxtotal>1000</maxtotal>
				<!-- 最大的空闲连接 -->
				<maxidle>100</maxidle>
				<!-- 最大的等待时间 -->
				<maxwait>1500</maxwait>
				<!-- 过期时间 -->
				<expiretime>60000</expiretime>
				<!-- 默认超时时间 -->
				<defaulttimeout>1500</defaulttimeout>
				<!-- testonborrow -->
				<testonborrow>true</testonborrow>
				<!-- testonreturn -->
				<testonreturn>true</testonreturn>
				<!-- 密码 -->
				<password>123456</password>
			</configuration>
			<redisnodes>
